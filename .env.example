# =============================================================================
# ACGS-2 Environment Configuration
# =============================================================================
# This file contains all environment variables for the ACGS-2 system.
# Copy to .env.dev for development or .env.production for production.
#
# Usage with Docker Compose:
#   docker compose -f docker-compose.dev.yml --env-file .env up -d
#
# Constitutional Hash: cdd01ef066bc6cf2
# =============================================================================

# =============================================================================
# General Settings
# =============================================================================
ACGS_ENV=development
LOG_LEVEL=INFO
CONSTITUTIONAL_HASH=cdd01ef066bc6cf2

# =============================================================================
# Service URLs
# =============================================================================
# Pattern: <SERVICE>_URL=http://<service>:<port>
AGENT_BUS_URL=http://agent-bus:8000
OPA_URL=http://opa:8181
ADAPTIVE_LEARNING_URL=http://adaptive-learning-engine:8001

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=dev_password
REDIS_PORT=6379

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_BOOTSTRAP=kafka:29092

# =============================================================================
# API Gateway Configuration
# =============================================================================
JWT_SECRET=dev-jwt-secret-min-32-chars-required
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*

# =============================================================================
# MACI (Multi-Agent Constitutional Intelligence) Configuration
# =============================================================================
MACI_STRICT_MODE=true

# =============================================================================
# Adaptive Learning Engine Configuration
# =============================================================================
# Port for the adaptive learning engine service
ADAPTIVE_LEARNING_PORT=8001

# MLflow model tracking and registry configuration
MLFLOW_TRACKING_URI=sqlite:///mlruns/mlflow.db

# Drift detection interval in seconds (default: 5 minutes)
DRIFT_CHECK_INTERVAL_SECONDS=300

# Minimum accuracy threshold for model safety bounds (0.0-1.0)
SAFETY_ACCURACY_THRESHOLD=0.85

# Minimum training samples before model is considered warm
MIN_TRAINING_SAMPLES=1000

# Window size for drift detection (number of samples)
DRIFT_WINDOW_SIZE=1000

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_ENABLED=true
