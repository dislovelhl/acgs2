# ACGS-2 Environment Configuration Template
# Constitutional Hash: cdd01ef066bc6cf2
#
# Copy this file to .env and customize values for your environment.
# The .env file is gitignored and should contain your actual secrets.

# =============================================================================
# Core Settings
# =============================================================================
APP_ENV=development
APP_DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Tenant Configuration
# =============================================================================
# Default tenant identifier for development
TENANT_ID=acgs-dev

# Whether tenant isolation is enabled
TENANT_ENABLED=true

# Kubernetes namespace prefix for tenant namespaces
K8S_NAMESPACE_PREFIX=tenant-

# =============================================================================
# Tenant Resource Quotas (Kubernetes-compatible formats)
# =============================================================================
# Default CPU quota per tenant (cores or millicores, e.g., '2' or '2000m')
TENANT_DEFAULT_CPU_QUOTA=2

# Default memory quota per tenant (e.g., '4Gi', '4096Mi')
TENANT_DEFAULT_MEMORY_QUOTA=4Gi

# Default storage quota per tenant (e.g., '20Gi')
TENANT_DEFAULT_STORAGE_QUOTA=20Gi

# Maximum number of pods per tenant namespace
TENANT_DEFAULT_MAX_PODS=50

# Maximum number of PersistentVolumeClaims per tenant
TENANT_DEFAULT_MAX_PVCS=10

# =============================================================================
# Tenant Rate Limiting
# =============================================================================
# Maximum requests per rate limit window
TENANT_DEFAULT_RATE_LIMIT_REQUESTS=1000

# Rate limit window duration in seconds
TENANT_DEFAULT_RATE_LIMIT_WINDOW=60

# =============================================================================
# Service URLs (Docker network names for container deployment)
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

OPA_URL=http://opa:8181
AGENT_BUS_URL=http://agent-bus:8000
KAFKA_BOOTSTRAP=kafka:29092

# =============================================================================
# Security Settings
# =============================================================================
CONSTITUTIONAL_HASH=cdd01ef066bc6cf2
MACI_STRICT_MODE=true

# JWT secret for authentication (CHANGE IN PRODUCTION!)
JWT_SECRET=your_jwt_secret_min_32_chars_here

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
