# =============================================================================
# Core Configuration
# =============================================================================
TENANT_ID=acgs-dev
ENVIRONMENT=development
LOG_LEVEL=INFO
ACGS_ENV=development
CONSTITUTIONAL_HASH=cdd01ef066bc6cf2
MACI_STRICT_MODE=true

# =============================================================================
# Infrastructure Services
# =============================================================================
# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=dev_password
REDIS_PORT=6379

# Kafka Configuration
KAFKA_BOOTSTRAP=kafka:29092
KAFKA_PASSWORD=

# OPA (Open Policy Agent) Configuration
OPA_URL=http://opa:8181

# =============================================================================
# Service URLs
# =============================================================================
AGENT_BUS_URL=http://agent-bus:8000

# =============================================================================
# HITL Approvals Service Configuration
# =============================================================================
# Service Port and URL
HITL_APPROVALS_PORT=8003
HITL_APPROVALS_URL=http://hitl-approvals:8003

# Escalation Policies
DEFAULT_ESCALATION_TIMEOUT_MINUTES=30
CRITICAL_ESCALATION_TIMEOUT_MINUTES=15

# =============================================================================
# Notification Integrations
# WARNING: These contain secrets - replace with your actual values
# =============================================================================
# Slack Integration (Incoming Webhook URL)
# Get this from: Slack App > Incoming Webhooks > Add New Webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Microsoft Teams Integration (Connector Webhook URL)
# Get this from: Teams Channel > Connectors > Incoming Webhook
MS_TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# PagerDuty Integration (Events API Routing Key)
# Get this from: PagerDuty > Services > Integrations > Events API v2
PAGERDUTY_ROUTING_KEY=your-pagerduty-integration-key

# =============================================================================
# Security Configuration
# =============================================================================
# IMPORTANT: Change these values in production!
JWT_SECRET=dev-jwt-secret-min-32-chars-required
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,*
