# ACGS-2 Configuration Template
# Copy this file to .env and customize for your environment
# All services are validated against this configuration at startup

# ============================================
# Environment Configuration
# ============================================

# Unique tenant identifier for multi-tenancy support
TENANT_ID=acgs-dev

# Deployment environment: development, staging, or production
# Security policies are stricter in production (DEBUG must be false)
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Enable debug mode (must be false in production)
DEBUG=false

# Enable hot-reload (development only)
RELOAD=false

# ============================================
# Infrastructure Configuration
# ============================================

# Redis connection URL (redis:// or rediss:// for TLS)
REDIS_URL=redis://localhost:6379

# Redis authentication password (min 8 chars required in production)
REDIS_PASSWORD=

# Kafka bootstrap server address (host:port)
KAFKA_BOOTSTRAP=

# Kafka authentication password
KAFKA_PASSWORD=

# Agent Bus service URL for inter-agent communication
AGENT_BUS_URL=http://localhost:8000

# OPA service URL for policy evaluation
OPA_URL=http://localhost:8181

# HITL Approvals service URL
HITL_APPROVALS_URL=http://localhost:8002

# HITL Approvals service port (1-65535)
HITL_APPROVALS_PORT=8002

# ============================================
# Timeout Configuration (in minutes)
# ============================================

# Default escalation timeout
DEFAULT_ESCALATION_TIMEOUT_MINUTES=30

# Critical escalation timeout (shorter for faster response)
CRITICAL_ESCALATION_TIMEOUT_MINUTES=15

# Emergency escalation timeout (extended monitoring)
EMERGENCY_ESCALATION_TIMEOUT_MINUTES=60
