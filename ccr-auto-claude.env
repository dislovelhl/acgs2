# CCR + Auto-Claude Integration Environment Variables
# Source this file before running Auto-Claude: source ccr-auto-claude.env

# Point Claude Code to the Local Router
export ANTHROPIC_BASE_URL="http://127.0.0.1:3456"

# CCR uses its own API key or passes through your OpenRouter key
# Replace with your actual OpenRouter key if not already configured in CCR
export ANTHROPIC_AUTH_TOKEN="your-openrouter-key-here"

# CRITICAL: Blank this out so it doesn't try to call Anthropic directly
export ANTHROPIC_API_KEY=""

# Optional: Auto-Claude specific variables
# export AUTO_BUILD_MODEL=claude-3.7-sonnet
