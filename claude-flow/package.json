{
  "name": "claude-flow",
  "version": "1.0.0",
  "description": "CLI tool for managing ACGS-2 agent swarms",
  "main": "dist/index.js",
  "bin": {
    "claude-flow": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testMatch='**/*.e2e.test.ts'",
    "test:e2e:real": "RUN_REAL_REDIS_TESTS=true jest --testMatch='**/*.e2e.test.ts'",
    "test:perf": "jest --testMatch='**/*.perf.test.ts' --verbose",
    "test:perf:real": "RUN_REAL_REDIS_TESTS=true jest --testMatch='**/*.perf.test.ts' --verbose",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ora": "^8.0.1",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "cli",
    "agent",
    "swarm",
    "acgs2",
    "coordination"
  ],
  "author": "ACGS-2 Team",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/__tests__/**/*.e2e.test.ts",
      "**/__tests__/**/*.perf.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "testTimeout": 10000
  }
}
