[flake8]
max-line-length = 100
extend-ignore = E203, E226, E501, W503
exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    .venv,
    venv,
    node_modules
per-file-ignores =
    __init__.py:F401
    scripts/*.py:E402
    src/core/tests/integration/*.py:E402
    src/core/enhanced_agent_bus/tests/*.py:E402
