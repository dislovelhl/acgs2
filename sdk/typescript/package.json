{
  "name": "@acgs2/sdk",
  "version": "3.0.0",
  "description": "ACGS-2 Enterprise TypeScript SDK - Constitutional AI Governance Platform",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "docs": "typedoc",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "ai-governance",
    "constitutional-ai",
    "multi-tenant",
    "enterprise",
    "typescript",
    "sdk"
  ],
  "author": "ACGS-2 Team",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/dislovelhl/acgs2.git",
    "directory": "sdk/typescript"
  },
  "bugs": {
    "url": "https://github.com/dislovelhl/acgs2/issues"
  },
  "homepage": "https://docs.acgs2.com",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "jose": "^4.15.4",
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4",
    "rxjs": "^7.8.1",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "@types/crypto-js": "^4.2.2",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.3.0",
    "typedoc": "^0.25.4"
  },
  "peerDependencies": {
    "axios": "^1.6.0"
  },
  "peerDependenciesMeta": {
    "axios": {
      "optional": false
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true
  }
}
