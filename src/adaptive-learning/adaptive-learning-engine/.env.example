# Adaptive Learning Engine - Environment Configuration Example
# Constitutional Hash: cdd01ef066bc6cf2
# Copy this file to .env and adjust values as needed

# Server Settings
ADAPTIVE_LEARNING_PORT=8001
LOG_LEVEL=INFO

# ML Model Settings
MIN_TRAINING_SAMPLES=1000
SAFETY_ACCURACY_THRESHOLD=0.85
SAFETY_CONSECUTIVE_FAILURES_LIMIT=3

# Drift Detection Settings
DRIFT_CHECK_INTERVAL_SECONDS=300
DRIFT_WINDOW_SIZE=1000
DRIFT_THRESHOLD=0.2
MIN_PREDICTIONS_FOR_DRIFT=10

# MLflow Settings
MLFLOW_TRACKING_URI=sqlite:///mlruns/mlflow.db
MLFLOW_MODEL_NAME=governance_model

# Integration URLs
REDIS_URL=redis://localhost:6379/0
KAFKA_BOOTSTRAP=kafka:29092
AGENT_BUS_URL=http://agent-bus:8000
OPA_URL=http://opa:8181

# Feature Flags
PROMETHEUS_ENABLED=true
KAFKA_ENABLED=false
REDIS_CACHE_ENABLED=true
DRIFT_DETECTION_ENABLED=true
SAFETY_BOUNDS_ENABLED=true
