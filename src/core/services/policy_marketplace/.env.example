# Policy Marketplace Service - Environment Variables
# Copy this file to .env and configure for your environment
# Constitutional Hash: cdd01ef066bc6cf2

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL async connection URL (uses asyncpg driver)
MARKETPLACE_DATABASE_URL=postgresql+asyncpg://acgs2_user:acgs2_pass@localhost:5432/acgs2_marketplace

# =============================================================================
# CORS Configuration
# =============================================================================
# Comma-separated list of allowed origins for CORS
# In production, specify exact origins (no wildcards)
MARKETPLACE_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# File Upload Configuration
# =============================================================================
# Maximum file size for template uploads (in bytes)
# Default: 10MB = 10485760 bytes
MARKETPLACE_MAX_FILE_SIZE=10485760

# Directory for temporary file uploads
# Should be writable by the service
MARKETPLACE_UPLOAD_DIR=/tmp/marketplace-uploads

# =============================================================================
# Application Settings
# =============================================================================
# Environment: development, staging, production
APP_ENV=development

# Enable debug mode (set to false in production)
APP_DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Multi-Tenant Configuration
# =============================================================================
# Tenant identifier for multi-tenant deployments
TENANT_ID=acgs-dev

# =============================================================================
# Service URLs (for inter-service communication)
# =============================================================================
# Policy Registry service URL
POLICY_REGISTRY_URL=http://localhost:8000

# Audit Service URL
AUDIT_SERVICE_URL=http://localhost:8001

# =============================================================================
# Security Configuration
# =============================================================================
# Internal API key for service-to-service authentication
# API_KEY_INTERNAL=your-secure-api-key

# JWT Secret for token validation
# JWT_SECRET=your-jwt-secret-min-32-chars

# =============================================================================
# Redis Configuration (for caching and rate limiting)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Default rate limit (requests per minute)
RATE_LIMIT_DEFAULT_RPM=100
