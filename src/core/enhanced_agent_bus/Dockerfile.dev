# Development Dockerfile for Enhanced Agent Bus
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Set Python path
ENV PYTHONPATH=/app

# Install Python dependencies
RUN pip install --no-cache-dir \
    fastapi==0.115.6 \
    uvicorn[standard]==0.32.1 \
    redis>=5.0.0 \
    httpx>=0.27.0 \
    pydantic>=2.8.0 \
    aiohttp>=3.9.0 \
    pytest>=8.0.0 \
    pytest-asyncio>=0.23.0

# Copy source code
COPY . .

# Expose port
EXPOSE 8000

# Default command
CMD ["python", "api.py"]
