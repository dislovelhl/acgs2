# Development Dockerfile for API Gateway
FROM python:3.11-slim

# Install system dependencies
# xmlsec1 and libxmlsec1-dev are CRITICAL for SAML signature validation (pysaml2)
RUN apt-get update && apt-get install -y \
    gcc \
    curl \
    xmlsec1 \
    libxmlsec1-dev \
    libxmlsec1-openssl \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install dependencies
COPY requirements.txt .
COPY requirements-sso.txt .
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r requirements-sso.txt

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Default command
CMD ["python", "main.py"]
